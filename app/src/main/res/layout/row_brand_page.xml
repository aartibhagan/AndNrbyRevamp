<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_andnrby_fragment"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="1dp"
    android:layout_marginTop="@dimen/five_dp"
    android:layout_marginRight="@dimen/five_dp"
    android:layout_marginLeft="@dimen/five_dp"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/header_strip_logo_and_handle"
            layout="@layout/include_header_strip_for_logo_and_handle"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            />

        <ImageView
            android:id="@+id/item_background_image_brand_page_adapter"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/three_hundred_dp"
            android:scaleType="centerCrop"
            android:layout_below="@+id/header_strip_logo_and_handle"
            />


        <include
            android:id="@+id/tittle_bottom_strip"
            layout="@layout/include_title_bottom_strip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_background_image_brand_page_adapter"
            />

        <include
            layout="@layout/include_likes_and_redeems"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tittle_bottom_strip"
            />

        <include
            layout="@layout/include_call_and_like"
            android:layout_alignTop="@id/item_background_image_brand_page_adapter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>
