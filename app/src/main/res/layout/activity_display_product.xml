<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ascentsmartwaves.andnrbyrevamp.activities.DisplayProductActivity"
    >

        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten_dp"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">


                <com.ascentsmartwaves.andnrbyrevamp.custom.CustomTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="NAME"
                    android:textColor="#000"
                    android:padding="@dimen/five_dp"
                    />
                <com.ascentsmartwaves.andnrbyrevamp.custom.CustomTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="DESCRIPTION"
                    android:textColor="#000"
                    android:padding="@dimen/five_dp"
                    />
                <com.ascentsmartwaves.andnrbyrevamp.custom.CustomTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="PRICE"
                    android:textColor="#000"
                    android:padding="@dimen/five_dp"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/other_products_recycler_view_display_product_activity"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            />



</RelativeLayout>
